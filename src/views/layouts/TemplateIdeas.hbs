<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Do not forget to change the path to the css file -->
    <title>Home Page</title>
    <link href="/css/style.css" type="text/css" rel="stylesheet" />
    <base href="/" />
  </head>

  <body>
    <div id="box">
      <!-- In case of error, you should display div with class "errorContainer" -->
      <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if error}}
        <div>
          <div class="errorContainer">
            <p>{{error.message}}</p>
          </div>
        </div>
      {{/if}}

      <nav>
        <a href="/">Home</a>
        <ul>
          <!-- Guest users and Logged users -->
          <li><a href="/house">Housing for rent</a></li>

          {{#if user}}
            <!-- Logged users -->
            <li><a href="/house/create">Create offer</a></li>
            <li><a href="/house/search">Search</a></li>
            <li><a href="/user/logout">Logout</a></li>
          {{else}}
            <!-- Guest users -->
            <li><a href="/user/login">Login</a></li>
            <li><a href="/user/register">Register</a></li>
          {{/if}}

        </ul>
      </nav>

      <main>
        {{{body}}}
      </main>

      <footer>
        Â© 2021
      </footer>
    </div>

  </body>

</html>